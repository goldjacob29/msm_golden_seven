<h1> Edit Movie </h1>

<form action="/movies/movie_update/<%= @m.id %>">

  <div>
    <label for="title">Title:</label>
  <input id="title" type="text" name="title" value="<%= @m.title %>">
  </div>

  <div>
    <label for="year">Year:</label>
  <input id="year" type="text" name="year" value="<%= @m.year %>">
  </div>

  <div>
    <label for="dur">Duration:</label>
  <input id="dur" type="text" name="dur" value="<%= @m.duration %>">
  </div>

  <div>
    <label for="desc">Description:</label>
  <input id="desc" type="text" name="desc" value="<%= @m.description %>">
  </div>

  <div>
    <label for="image_url">Picture:</label>
  <input id="image_url" type="text" name="image_url" value="<%= @m.image_url %>">
  </div>

  <div>
    <button>Update Movie</button>
  </div>
</form>
