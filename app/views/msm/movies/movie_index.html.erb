<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
  <div class="row text-center">
    <h1> Movies </h1>
    <a href="/movies/movie_new_form"> Add a Movie </a>
  </div>

  <% @list_of_movies.each do |movie| %>
  <div class="row">
    <div class="row col-md-6">
      <h2> <%= movie.title %></h2>
      <a href="/movies/<%= movie.id %>"> Show </a>
      <a href="/movies/<%= movie.id %>/edit_form">Edit</a>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </div>
  </div>
  <div class="row">
    <div class="row col-md-6">
      <h3>Year</h3> <p><%= movie.year %></p>
      <h3>Duration</h3> <p> <%= "#{movie.duration} minutes" %></p>
      <img src="<%= movie.image_url %>" width="350px">
    </div>
    <div class="row col-md-6">
      <h3>Description</h3> <p class="lead"> <%= movie.description %></p>
    </div>
  </div>
  <% end %>


  <div class="row">
    <a href="/">Home</a>
  </div>
</div>
