    <div class="col-sm-offset-1 col-sm-3 text-center">
      <a href="/actors"> <font color="black"> <h2>Actors</h2></font> </a>
      <img src= "<%= Actor.first.image_url %>">
      <h3> <%= Actor.first.name %> </h3>
    </div>
    <div class="col-sm-offset-1 col-sm-3 text-center">
      <a href="/movies"> <font color="black"> <h2>Movies</h2></font> </a>
      <img src= "<%= Movie.first.image_url %>">
      <h3> <%= Movie.first.title %> </h3>
    </div>
  </div>
</div>
