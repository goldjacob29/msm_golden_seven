<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
  <div class="row text-center">
    <h1> Actors </h1>
    <a href="/actors/actor_new_form"> Add an Actor </a>
  </div>

  <% @list_of_actors.each do |actor| %>
  <div class="row">
    <div class="row col-md-6">
      <h2> <%= actor.name %></h2>
      <a href="/actors/<%= actor.id %>"> Show </a>
      <a href="/actors/<%= actor.id %>/edit_form">Edit</a>
      <a href="/delete_actor/<%= actor.id %>">Delete</a>
    </div>
  </div>
  <div class="row">
    <div class="row col-md-6">
      <h3>Born</h3> <p><%= actor.dob %></p>
      <img src="<%= actor.image_url %>" width="350px">
    </div>
    <div class="row col-md-6">
      <h3>Bio</h3> <p class="lead"> <%= actor.bio %></p>
    </div>
  </div>
  <% end %>




    <div class="row text-center">
      <a href="/">Home</a>
    </div>
  </div>
