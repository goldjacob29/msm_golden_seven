<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container text-center">
  <div class="row">
    <h1> Directors </h1>
    <a href="/directors/director_new_form"> Add a Director </a>
  </div>

  <div class="row">
    <% @list_of_directors.each do |director| %>
    <h2> <%= director.name %></h2>
    <a href="/directors/<%= director.id %>"> Show </a>
    <h3>Born</h3> <p><%= director.dob %></p>
    <img src="<%= director.image_url %>">
    <h3>Bio</h3> <p class="lead"> <%= director.bio %></p>
    <a href="/directors/<%= director.id %>/edit_form">Edit</a>
    <a href="/delete_director/<%= director.id %>">Delete</a>
    <% end %>
  </div>

  <div class="row">
    <a href="/">Home</a>
  </div>
</div>
